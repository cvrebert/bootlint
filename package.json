{
  "name": "bootlint",
  "version": "0.16.3",
  "description": "HTML linter for Bootstrap projects",
  "license": "MIT",
  "author": "Chris Rebert <code@rebertia.com> (http://chrisrebert.com)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/twbs/bootlint.git"
  },
  "bugs": {
    "url": "https://github.com/twbs/bootlint/issues"
  },
  "homepage": "https://github.com/twbs/bootlint",
  "scripts": {
    "browserify": "browserify src/bootlint.js | node build/stamp.js > dist/browser/bootlint.js",
    "build": "npm run browserify && npm run minify",
    "dist": "npm run build",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "eslint": "eslint .",
    "lint": "npm run eslint",
    "minify": "terser --compress typeofs=false --mangle --comments \"/^!/\" --source-map \"includeSources,url=bootlint.min.js.map\" --output dist/browser/bootlint.min.js dist/browser/bootlint.js",
    "nodeunit": "nodeunit test",
    "qunit": "node build/phantom.js",
    "start": "node ./bin/www",
    "test": "npm run eslint && npm run build && npm run nodeunit && npm run qunit",
    "travis": "nyc npm test"
  },
  "dependencies": {
    "binary-search": "^1.3.5",
    "bluebird": "^3.5.3",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.2",
    "cheerio": "^0.22.0",
    "commander": "^2.19.0",
    "debug": "^4.1.1",
    "express": "^4.16.4",
    "glob": "^7.1.3",
    "morgan": "^1.9.1",
    "semver": "^5.6.0",
    "void-elements": "^3.1.0"
  },
  "devDependencies": {
    "async": "^2.6.2",
    "browserify": "^16.2.3",
    "coveralls": "^3.0.2",
    "eslint": "^5.13.0",
    "jquery": "^3.3.1",
    "node-qunit-phantomjs": "^2.0.1",
    "nodeunit": "^0.11.3",
    "nyc": "^13.3.0",
    "qunit": "^2.9.1",
    "rewire": "^4.0.1",
    "sinon": "^7.2.3",
    "terser": "^3.16.1"
  },
  "main": "./src/bootlint.js",
  "bin": {
    "bootlint": "./src/cli-main.js"
  },
  "browser": {
    "binary-search": false,
    "cheerio": "jquery",
    "url": "./src/url.js",
    "./src/cli.js": false,
    "./src/cli-main.js": false,
    "./src/location.js": false
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ]
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "bin/www",
    "dist/browser/*.{js,map}",
    "src/*.js",
    "app.js"
  ],
  "keywords": [
    "bootstrap",
    "checker",
    "correctness",
    "html",
    "lint",
    "linter",
    "validator",
    "validity"
  ]
}
